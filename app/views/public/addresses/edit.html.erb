<h2>配送先編集</h2>

  <%= form_with model: @address, url: address_path, method: :patch do |f| %>
  <table>
    <tbody>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code, :placeholder => "0000000" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, :placeholder => "東京都渋谷区神園町0-0" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name, :placeholder => "令和道子" %></td>
        <td><%= f.submit '変更内容を保存', class:"btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>