<h2>配送先登録/一覧</h2>
<div>
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <table>
    <tbody>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code, :placeholder => "0000000" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, :placeholder => "東京都渋谷区神園町0-0" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name, :placeholder => "令和道子" %></td>
        <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>
<div>
  <table>
    <thead>
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |f| %>
      <tr>
        <td><%= f.postal_code %></td>
        <td><%= f.address %></td>
        <td><%=f.name %></td>
        <td><%= link_to "編集する", edit_address_path(f.id) %></td>
        <td><%= link_to "削除する", address_path(f.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>