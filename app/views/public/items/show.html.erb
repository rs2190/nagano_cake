<div class = "items_main">
    <%= render 'genres_sidebar', genres: @genres %>
  <div class = "items_image">
    <%= image_tag @item.get_image(250,250) %>
  </div>
  <div class = "items_area">
    <%= form_with model: @cart_item, url: cart_items_path, method :post do |f| %>
    <%= f.hidden_field :amount, :value => @cart_item.amount %>
    <table>
      <tbody>
        <tr>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>￥ <%= @item.get_tax_included_price_delimited %> (税込)</td>
        </tr>
      </tbody>
    </table>
        <div>
          <%= f.select :amount, *[1..10], include_blank: '個数選択'  %>
          <%= f.submit 'カートに入れる', class:"btn btn-success" %>
        </div>
    <% end %>
  </div>
</div>
