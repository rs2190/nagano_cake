<div class = "row">
    <%= render 'genres_sidebar', genres: @genres %>
  <div class = "items_image offset-1">
    <%= image_tag @item.get_image(250,250) %>
  </div>
  <div class = "items_area offset-1">
    <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.hidden_field :amount, :value => @cart_item.amount %>
    <div>
      <div class ="mt-2">
        <h4><%= @item.name %></h4>
      </div>
      <div class ="mt-2">
        <%= @item.introduction %>
      </div>
      <div class ="mt-2">
        <strong>￥ <%= @item.get_tax_included_price_delimited %> </strong>(税込)
      </div>
      <div class ="mt-5">
        <%= f.select :amount, *[1..10], include_blank: '個数選択'  %>
        <%= f.submit 'カートに入れる', class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

