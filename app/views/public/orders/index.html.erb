<div class = "d-flex justify-content-between">
  <h4 class = "gray field m-3">注文履歴一覧</h4>
</div>

<div>
  <table class = "table table-hover table-bordered" >
    <thead class = "table-secondary">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |f| %>
      <tr>
        <td><%= f.get_order_date %></td>
        <td>
          <%= f.get_postal_code %><br>
          <%= f.address %><br>
          <%= f.name %><br>
        </td>
        <td>
          <% f.order_details.each do |g| %>
            <%= g.item.name %><br>
          <% end %>
        </td>
        <td><%= f.get_payment %></td>
        <td><%= Order.order_statuses_i18n[f.order_status]  %></td>
        <td><%= link_to '表示する', order_path(f.id), method: :get, class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
