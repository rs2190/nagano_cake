<h2>マイページ</h2>
<div>
  <h2>登録情報</h2>
  <%= link_to "編集する", edit_information_customers_path %>
</div>
<table border="1" cellspacing="0" cellpadding="0">
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.name_blank %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.name_kana_blank %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>
<div>
  <h2>配送先</h2>
  <%= link_to "一覧を見る", addresses_path %>
</div>
<div>
  <h2>注文履歴</h2>
  <%= link_to "一覧を見る", orders_path %>
</div>