<div class = "d-flex justify-content-between">
  <h4 class = "gray">新規会員登録</h4>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "名前" %>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, :placeholder => "令和", autofocus: true %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, :placeholder => "道子" %>
  </div>

  <div class="field">
    <%= f.label :name_kana, "フリガナ" %>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, :placeholder => "レイワ" %>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, :placeholder => "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, :placeholder => "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号 (ハイフンなし)" %>
    <%= f.text_field :postal_code, :placeholder => "0000000", maxlength: 7  %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, :placeholder => "東京都渋谷区神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号 (ハイフンなし)" %>
    <%= f.text_field :telephone_number, :placeholder => "0000000" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
      (<%= @minimum_password_length %>文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード (確認用)"  %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success"  %>
  </div>
<% end %>

<%= render "public/shared/links" %>
