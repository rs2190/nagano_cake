<div class = "d-flex justify-content-between">
  <h4 class = "gray field m-3">商品一覧</h4>
  <%= link_to new_admin_item_path, method: :get do%>
    <i class="fas fa-plus-circle fa-lg"></i>
  <% end %>
</div>

<div>
   <table class = "table" >
    <thead class = "table-secondary">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |f| %>
      <tr>
        <td><%= f.id %></td>
        <td>
          <%= link_to admin_item_path(f.id) do %>
            <%= f.name %>
          <% end %>
        </td>
        <td><%= f.get_price_delimited %></td>
        <td><%= f.genre.name %></td>
        <% if f.is_active %>
          <td class = "text-success"><p class="font-weight-bold">販売中</p></td>
        <% else %>
         <td class = "text-secondary"><p class="font-weight-bold">販売停止中</p></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class = "d-flex justify-content-center">
  <%= paginate @items %>
</div>