<h2>商品一覧</h2>

<diV>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |f| %>
      <tr>
        <td><%= f.id %></td>
        <td>
          <%= link_to admin_item_path(f.id) do %>
            <%= f.name %>
          <% end %>
        </td>
        <td><%= f.get_price_delimited %></td>
        <td><%= f.genre.name %></td>
        <% if f.is_active %>
          <td class = "is_active_true">販売中</td>
        <% else %>
          <td class = "is_active_false">販売停止中</td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</diV>