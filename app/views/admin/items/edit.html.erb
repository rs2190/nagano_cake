<h2>商品新規登録</h2>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

  <% if @item.errors.any? %>
  <div id="error_explanation">
    <h3><%= @item.errors.count %> 個のエラーが発生しました。</h3>
    <ul>
    <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
  <div>
  <% end %>
  
<div>
  <table>
    <tbody>
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name, :placeholder => "商品名" %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction, :placeholder => "ここに説明分を記述します" %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
      </tr>
       <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price, :placeholder => "1000" %>円</td>
      </tr>
      <tr>
      <td>販売ステータス</td>
      <td>
        <div>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中' %>
        </div>
      </td>
      <td>
        <div>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中' %>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
</div>
<div>
  <%= f.submit '変更を保存', class:"btn btn-success" %>
</div>
<% end %>