<div class = "d-flex justify-content-between">
  <h4 class = "gray field m-3">会員一覧</h4>
</div>
<div>
  <table class = "table" >
    <thead class = "table-secondary">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |f| %>
      <tr>
        <td><%= f.id %></td>
        <td>
          <%= link_to admin_customer_path(f.id) do %>
            <%= f.name %>
          <% end %>
        </td>
        <td><%= f.email %></td>
        <% if f.is_deleted %>
          <td class = "text-secondary"><p class="font-weight-bold">退会</p></td>
        <% else %>
          <td class = "text-success"><p class="font-weight-bold">有効</p></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</diV>
<div class = "d-flex justify-content-center">
  <%= paginate @customers %>
</div>