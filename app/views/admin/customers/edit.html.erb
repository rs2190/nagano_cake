<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
<div class = "d-flex justify-content-between">
  <h4 class = "gray field m-3"><%= @customer.name %>さんの会員情報編集</h4>
</div>

<% if @customer.errors.any? %>
  <div id="error_explanation">
    <h3><%= @customer.errors.count %> 個のエラーが発生しました。</h3>
    <ul>
    <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<div>
  <table>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name, :placeholder => "令和" %></td>
        <td><%= f.text_field :first_name, :placeholder => "道子" %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= f.text_field :last_name_kana, :placeholder => "レイワ" %></td>
        <td><%= f.text_field :first_name_kana, :placeholder => "ミチコ" %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code, :placeholder => "0000000", maxlength: 7  %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, :placeholder => "東京都渋谷区神園町0-0" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number, :placeholder => "0000000" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email, :placeholder => "sample@example.com" %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <div>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効' %>
          </div>
        </td>
        <td>
          <div>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会' %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class = "d-flex justify-content-between field m-3">
  <%= f.submit '変更を保存', class:"btn btn-success" %>
</div>
<% end %>