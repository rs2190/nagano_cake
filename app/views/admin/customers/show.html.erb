<div class = "d-flex justify-content-between">
  <h4 class = "gray"><%= @customer.name %>さんの会員詳細</h4>
</div>
<table class = "table table-borderless" >
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.name_blank %></td>
    </tr>
    <tr>
      <td>フリカナ</td>
      <td><%= @customer.name_kana_blank %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <% if @customer.is_deleted %>
        <td class = "text-secondary"><p class="font-weight-bold">退会</p></td>
      <% else %>
        <td class = "text-success"><p class="font-weight-bold">有効</p></td>
      <% end %>
    </tr>
  </tbody>
</table>
<div class = "d-flex justify-content-around">
  <div class = "col-md-auto">
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
  </div>
  <div class = "col-md-auto">
    <%= link_to "注文履歴一覧を見る", admin_home_top_path, class:"btn btn-primary" %>
  </div>
</div>